extend base

block append head 
  link(rel="stylesheet" href="https://unpkg.com/leaflet@1.9.3/dist/leaflet.css" integrity="sha256-kLaT2GOSpHechhsozzB+flnD+zUyjE2LlfWPgU04xyI=" crossorigin="")
  script(src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js" integrity="sha256-WBkoXOwTeyKclOHuWtc+i2uENFpDZ9YPdf5Hf+D7ewM=" crossorigin="")

block content
  body(Style="background-color: #f7f7f7")
    section.section-cta.section1
      .cta
        .cta__img.cta__img--logo
          img(src='/img/logo-white.png', alt='Natours logo')
        img.cta__img.cta__img--1(src='/img/tours/tour-1-1.jpg', alt='Tour picture')
        img.cta__img.cta__img--2(src='/img/tours/tour-1-2.jpg', alt='Tour picture')
        .cta__content
          h2.heading-secondary Book your first tour!
          p.cta__text 
            | <strong>The Forest Hiker, Baniff, Canada</strong>
            | <br> 7 days. 1 adventure. Infinite memories. Make it yours today!

          if user 
            button.btn.btn--green.btn--pulse.span-all-rows#book-tour(data-tour-id='5c88fa8cf4afda39709c2951') Book now!
          else 
            a.btn.btn--green.btn--pulse.span-all-rows(href='/login') Log in to book tour!

  section.section-pictures
      .picture-box
        img.picture-box__img.picture-box__img(src=`/img/tours/tour-1-1.jpg`, alt=`tour-1.jpg` class=`picture-box__img--1`)
      .picture-box
        img.picture-box__img.picture-box__img(src=`/img/tours/tour-1-2.jpg`, alt=`tour-2.jpg` class=`picture-box__img--2`)
      .picture-box
        img.picture-box__img.picture-box__img(src=`/img/tours/tour-1-3.jpg`, alt=`tour-3.jpg` class=`picture-box__img--3`)

  section.section-map.section2
    #map(style="height: 41vh; width: 100%;" data-locations='[{"_id":"5c88fa8cf4afda39709c2954","description":"Banff National Park","type":"Point","coordinates":[-116.214531,51.417611],"day":1},{"_id":"5c88fa8cf4afda39709c2953","description":"Jasper National Park","type":"Point","coordinates":[-118.076152,52.875223],"day":3},{"_id":"5c88fa8cf4afda39709c2952","description":"Glacier National Park of Canada","type":"Point","coordinates":[-117.490309,51.261937],"day":5}]')

  section.section-cta.section3
    .cta
      .cta__img.cta__img--logo
        img(src='/img/logo-white.png', alt='Natours logo')
      img.cta__img.cta__img--1(src='/img/tours/tour-2-1.jpg', alt='Tour picture')
      img.cta__img.cta__img--2(src='/img/tours/tour-3-2.jpg', alt='Tour picture')
      .cta__content
        h2.heading-secondary Or feel free to explore our other tours!
        p.cta__text Many more opportunities to blow off steam and relax!

        if user 
          a.btn.btn--green.span-all-rows(href='/') Explore!
        else 
          a.btn.btn--green.span-all-rows(href='/') Log in to book tour!

  